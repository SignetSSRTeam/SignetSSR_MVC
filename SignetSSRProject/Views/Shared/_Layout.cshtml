<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Signet Maritime</title>
    <style>

        .navbar-nav > li:hover {
            text-decoration:underline;
        }

        ul li ul {
            display: none;
        }

        ul li:hover ul {
            display: block; /* display the dropdown */
        }
        
    </style>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/jsgrid/CSS")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jsgrid")

</head>
<body style="background-color: #F7F7F7;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Signet Maritime", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            @if (User.IsInRole("Administrator") || User.IsInRole("User"))
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Record Hours", "Index", "HoursWorkeds",null, htmlAttributes: new { @style = "color: white;" })</li>
                        <li>@Html.ActionLink("Materials", "Index", "Materials",null, new { @style = "color: white;" })</li>
                        <li>@Html.ActionLink("Job Detail", "Index", "Jobs",null, new { @style = "color: white;" })</li>
                        <li>@Html.ActionLink("Customer", "Index", "Customers",null, new { @style = "color: white;" })</li>
                        <li>@Html.ActionLink("Employees", "Index", "Employee", null,new { @style = "color: white;" })</li>
                        <li>@Html.ActionLink("Attendance", "Index", "Attendance", null,new { @style = "color: white;" })</li>
                        <li>@Html.ActionLink("Rate", "Index", "Rates",null, new { @style = "color: white;" })</li>
                        <li>@Html.ActionLink("Reports", "Index", "Reports",null, new { @style = "color: white;" })</li>
                    
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            }
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <div>
            <footer style="position:fixed;bottom:0;" class="col-lg-12">
                <p class="col-lg-2"></p>
                <p class="col-lg-3" style="color: #0B99BD">&copy; @DateTime.Now.Year - Signet Maritime </p>
                <p align="right" class="col-lg-3" style="color: #0B99BD"> &trade; University of South Alabama </p>
            </footer>
        </div>
    </div>

    
    @RenderSection("scripts", required: false)
</body>
</html>
